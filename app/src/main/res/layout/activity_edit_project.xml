<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.macktaby.sbrp.view.EditProjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_edit_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Package Name" />

        <EditText
            android:id="@+id/editText_edit_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView_edit_project_tech_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Technical Reflection" />

        <EditText
            android:id="@+id/editText_edit_tech_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView_edit_project_mng_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Management Reflection" />

        <EditText
            android:id="@+id/editText_edit_mng_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView_edit_project_bz_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Business Reflection" />

        <EditText
            android:id="@+id/editText_edit_bz_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/btn_edit_project_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="bottom"
            android:text="Edit" />

    </RelativeLayout>

</LinearLayout>
