<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.macktaby.sbrp.view.AddNewPackageActivity">

    <TextView
        android:id="@+id/textview_new_package_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Package Name" />

    <EditText
        android:id="@+id/editText_new_package_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView_new_package_tech_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Technical Reflection" />

    <EditText
        android:id="@+id/editText_new_tech_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView_new_package_mng_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Management Reflection" />

    <EditText
        android:id="@+id/editText_new_mng_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView_new_package_bz_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Business Reflection" />

    <EditText
        android:id="@+id/editText_new_bz_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/btn_add_package_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="bottom"
            android:text="Add" />

    </RelativeLayout>

</LinearLayout>
